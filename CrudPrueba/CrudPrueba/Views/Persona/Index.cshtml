@model List<CrudPrueba.Models.ViewModel.ListaPersonaViewModel>
@{
    ViewBag.Title = "Datos";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="text-align:right; padding:5px;">
    <a href="~/Persona/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.id</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Edad</td>
            <td>
                <a class="btn btn-default" href="~/Persona/Editar/@item.id">Editar</a>
                <a class="btn btn-danger" href="~/Persona/Eliminar/@item.id">Eliminar</a>
            </td>
        </tr>
            }
        </table>
    </div>
</div>
